<% content_for :title, t('page_title_search') %>

<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <h1 class="page-title"><%= t('properties_search_title') %></h1>
    <p class="page-subtitle"><%= t('properties_search_subtitle') %></p>
  </div>
</div>

<!-- Search Content -->
<div class="search-content-section">
  <div class="container">
    <div class="search-content">
      <p><%= t('properties_search_content') %></p>
      
      <!-- Advanced Search Form -->
      <div class="advanced-search-form">
        <h3><%= t('action_search_title') %></h3>
        <form class="search-form">
          <div class="form-row">
            <div class="form-group">
              <label for="search-location"><%= t('filter_location') %></label>
              <input type="text" id="search-location" placeholder="<%= t('filter_location') %>">
            </div>
            <div class="form-group">
              <label for="search-type"><%= t('filter_type') %></label>
              <select id="search-type">
                <option value=""><%= t('filter_type') %></option>
                <option value="house"><%= t('property_type_house') %></option>
                <option value="apartment"><%= t('property_type_apartment') %></option>
                <option value="condo"><%= t('property_type_condo') %></option>
                <option value="townhouse"><%= t('property_type_townhouse') %></option>
              </select>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="search-price"><%= t('filter_price') %></label>
              <select id="search-price">
                <option value=""><%= t('filter_any_price') %></option>
                <option value="0-200000"><%= t('filter_under_200k') %></option>
                <option value="200000-400000"><%= t('filter_200k_400k') %></option>
                <option value="400000-600000"><%= t('filter_400k_600k') %></option>
                <option value="600000+"><%= t('filter_600k_plus') %></option>
              </select>
            </div>
            <div class="form-group">
              <label for="search-bedrooms"><%= t('filter_bedrooms') %></label>
              <select id="search-bedrooms">
                <option value=""><%= t('filter_any') %></option>
                <option value="1"><%= t('filter_1_plus') %></option>
                <option value="2"><%= t('filter_2_plus') %></option>
                <option value="3"><%= t('filter_3_plus') %></option>
                <option value="4"><%= t('filter_4_plus') %></option>
              </select>
            </div>
          </div>
          
          <button type="submit" class="btn btn-primary"><%= t('filter_apply') %></button>
        </form>
      </div>
    </div>
  </div>
</div>
