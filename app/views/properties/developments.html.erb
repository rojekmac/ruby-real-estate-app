<% content_for :title, t('page_title_developments') %>

<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <h1 class="page-title"><%= t('properties_developments_title') %></h1>
    <p class="page-subtitle"><%= t('properties_developments_subtitle') %></p>
  </div>
</div>

<!-- Developments Content -->
<div class="developments-content-section">
  <div class="container">
    <div class="developments-content">
      <p><%= t('properties_developments_content') %></p>
      
      <!-- Featured Developments -->
      <div class="featured-developments">
        <h3><%= t('listings_title') %></h3>
        
        <div class="developments-grid">
          <div class="development-card">
            <div class="development-image">
              <%= image_tag 'propertyPhoto.jpg', alt: 'Development Photo', class: 'development-img' %>
              <div class="development-badge"><%= t('property_badge_new') %></div>
            </div>
            <div class="development-content">
              <h4><%= t('property_title_luxury_apartment') %></h4>
              <p><%= t('property_address_luxury_apartment') %></p>
              <p><%= t('property_desc_luxury_apartment') %></p>
              <div class="development-details">
                <span><%= t('property_bedrooms') %>: 2-4</span>
                <span><%= t('property_bathrooms') %>: 2-3</span>
                <span><%= t('property_sqft') %>: 1,200-2,500</span>
              </div>
              <div class="development-price">From $380,000</div>
            </div>
          </div>
          
          <div class="development-card">
            <div class="development-image">
              <%= image_tag 'propertyPhoto.jpg', alt: 'Development Photo', class: 'development-img' %>
              <div class="development-badge"><%= t('property_badge_featured') %></div>
            </div>
            <div class="development-content">
              <h4><%= t('property_title_modern_family') %></h4>
              <p><%= t('property_address_modern_family') %></p>
              <p><%= t('property_desc_modern_family') %></p>
              <div class="development-details">
                <span><%= t('property_bedrooms') %>: 3-5</span>
                <span><%= t('property_bathrooms') %>: 2-4</span>
                <span><%= t('property_sqft') %>: 2,100-3,500</span>
              </div>
              <div class="development-price">From $450,000</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
