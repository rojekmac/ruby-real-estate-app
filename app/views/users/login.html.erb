<% content_for :title, t('page_title_login') %>

<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <h1 class="page-title"><%= t('users_login_title') %></h1>
    <p class="page-subtitle"><%= t('users_login_subtitle') %></p>
  </div>
</div>

<!-- Login Content -->
<div class="login-content-section">
  <div class="container">
    <div class="login-content">
      <p><%= t('users_login_content') %></p>
      
      <!-- Login Form -->
      <div class="login-form-container">
        <form class="login-form">
          <div class="form-group">
            <label for="login-email"><%= t('contact_email') %></label>
            <input type="email" id="login-email" required>
          </div>
          
          <div class="form-group">
            <label for="login-password"><%= t('password') %></label>
            <input type="password" id="login-password" required>
          </div>
          
          <button type="submit" class="btn btn-primary"><%= t('nav_login') %></button>
        </form>
      </div>
    </div>
  </div>
</div>
