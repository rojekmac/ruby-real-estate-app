<% content_for :page_title, "Property Details" %>
<% @page_title = "Property ##{@property.id}" %>

<div class="admin-section">
  <div class="admin-section-header">
    <h2>Property Details</h2>
    <div class="admin-action-buttons">
      <%= link_to "Edit", edit_admin_property_path(@property), class: "admin-btn admin-btn-primary" %>
      <%= button_to "Delete", admin_property_path(@property), method: :delete, 
          class: "admin-btn admin-btn-danger", 
          confirm: "Are you sure you want to delete this property?",
          form: { style: "display: inline;" } %>
      <%= link_to "Back to Properties", admin_properties_path, class: "admin-btn admin-btn-outline" %>
    </div>
  </div>

  <div class="admin-property-details">
    <div class="admin-property-card">
      <div class="admin-property-header">
        <h3><%= @property.property_type.titleize %></h3>
        <div class="admin-property-price">à¸¿<%= number_with_delimiter(@property.price) %></div>
      </div>

      <div class="admin-property-info">
        <div class="admin-info-row">
          <label>Address:</label>
          <span><%= @property.address %></span>
        </div>

        <div class="admin-info-row">
          <label>Property Type:</label>
          <span><%= @property.property_type.titleize %></span>
        </div>

        <div class="admin-info-row">
          <label>Bedrooms:</label>
          <span><%= @property.bedrooms %></span>
        </div>

        <div class="admin-info-row">
          <label>Bathrooms:</label>
          <span><%= @property.bathrooms %></span>
        </div>

        <div class="admin-info-row">
          <label>Created:</label>
          <span><%= @property.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>

        <div class="admin-info-row">
          <label>Last Updated:</label>
          <span><%= @property.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      </div>

      <div class="admin-property-description">
        <label>Description:</label>
        <div class="admin-description-content">
          <%= simple_format(@property.description) %>
        </div>
      </div>
    </div>
  </div>
</div>