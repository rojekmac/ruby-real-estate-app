  </div>
</div>

<!-- Filters Section -->
<div class="filters-section">
  <div class="container">
    <div class="filters-form">
      <div class="filter-group">
        <label for="property-type"><%= t('filter_type') %></label>
        <select id="property-type" class="filter-select">
          <option value=""><%= t('filter_type') %></option>
          <option value="house"><%= t('property_type_house') %></option>
          <option value="apartment"><%= t('property_type_apartment') %></option>
          <option value="condo"><%= t('property_type_condo') %></option>
          <option value="townhouse"><%= t('property_type_townhouse') %></option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="price-range"><%= t('filter_price') %></label>
        <select id="price-range" class="filter-select">
          <option value=""><%= t('filter_any_price') %></option>
          <option value="0-200000"><%= t('filter_under_200k') %></option>
          <option value="200000-400000"><%= t('filter_200k_400k') %></option>
          <option value="400000-600000"><%= t('filter_400k_600k') %></option>
          <option value="600000+"><%= t('filter_600k_plus') %></option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="bedrooms"><%= t('filter_bedrooms') %></label>
        <select id="bedrooms" class="filter-select">
          <option value=""><%= t('filter_any') %></option>
          <option value="1"><%= t('filter_1_plus') %></option>
          <option value="2"><%= t('filter_2_plus') %></option>
          <option value="3"><%= t('filter_3_plus') %></option>
          <option value="4"><%= t('filter_4_plus') %></option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="bathrooms"><%= t('filter_bathrooms') %></label>
        <select id="bathrooms" class="filter-select">
          <option value=""><%= t('filter_any') %></option>
          <option value="1"><%= t('filter_1_plus') %></option>
          <option value="2"><%= t('filter_2_plus') %></option>
          <option value="3"><%= t('filter_3_plus') %></option>
        </select>
      </div>
      
      <button class="btn btn-primary filter-btn"><%= t('filter_apply') %></button>
      <button class="btn btn-secondary reset-filters-btn" type="button"><%= t('filter_reset') %></button>
    </div>
  </div>
</div>

