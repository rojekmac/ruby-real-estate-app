<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <h1 class="page-title">Property Listings</h1>
    <p class="page-subtitle">Discover exceptional properties available for sale</p>
  </div>
</div>

<!-- Filters Section -->
<div class="filters-section">
  <div class="container">
    <div class="filters-form">
      <div class="filter-group">
        <label for="property-type">Property Type</label>
        <select id="property-type" class="filter-select">
          <option value="">All Types</option>
          <option value="house">House</option>
          <option value="apartment">Apartment</option>
          <option value="condo">Condo</option>
          <option value="townhouse">Townhouse</option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="price-range">Price Range</label>
        <select id="price-range" class="filter-select">
          <option value="">Any Price</option>
          <option value="0-200000">Under $200,000</option>
          <option value="200000-400000">$200,000 - $400,000</option>
          <option value="400000-600000">$400,000 - $600,000</option>
          <option value="600000+">$600,000+</option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="bedrooms">Bedrooms</label>
        <select id="bedrooms" class="filter-select">
          <option value="">Any</option>
          <option value="1">1+</option>
          <option value="2">2+</option>
          <option value="3">3+</option>
          <option value="4">4+</option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="bathrooms">Bathrooms</label>
        <select id="bathrooms" class="filter-select">
          <option value="">Any</option>
          <option value="1">1+</option>
          <option value="2">2+</option>
          <option value="3">3+</option>
        </select>
      </div>
      
      <button class="btn btn-primary filter-btn">Apply Filters</button>
    </div>
  </div>
</div>

