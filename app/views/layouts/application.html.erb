<!DOCTYPE html>
<html>
 <head>
 <title>My First App</title>
 <meta name="viewport" content="width=device-width,initial-scale=1">
 <%= csrf_meta_tags %>
 <%= csp_meta_tag %>
 <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
 <%= javascript_importmap_tags %>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
 </head>
<body>
 <nav>
  <%= link_to "HOME", root_path %>
  <%= link_to "LISTINGS", pages_listings_path %>
  <a href="<%= root_path %>#about-section">ABOUT US</a>
  <a href="<%= root_path %>#contact-section">CONTACT</a>
 </nav>
 <%= yield %>

<!-- Back to Top Arrow -->
<button id="back-to-top" title="Back to top" aria-label="Back to top">
  &#8679;
</button>

<script>
  document.addEventListener('turbo:load', function() {
    // Smooth scroll for anchor links
    if (window.location.hash) {
      const target = document.getElementById(window.location.hash.slice(1));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth' });
      }
    }
    const anchorLinks = document.querySelectorAll('a[href^="#"], a[href^="/"][href*="#"]');
    anchorLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        const hash = href.includes('#') ? href.split('#')[1] : null;
        if (hash) {
          const target = document.getElementById(hash);
          if (target) {
            e.preventDefault();
            history.pushState(null, '', '#' + hash);
            target.scrollIntoView({ behavior: 'smooth' });
          }
        }
      });
    });

    // Back to Top Arrow
    const backToTop = document.getElementById('back-to-top');
    window.addEventListener('scroll', function() {
      if (window.scrollY > 300) {
        backToTop.classList.add('visible');
      } else {
        backToTop.classList.remove('visible');
      }
    });
    backToTop.addEventListener('click', function() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>
</body>
</html>
