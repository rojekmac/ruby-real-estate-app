<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel - Immobilien</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="admin-body">
    <div class="admin-wrapper">
      <!-- Admin Sidebar -->
      <nav class="admin-sidebar">
        <div class="admin-sidebar-header">
          <h2><i class="fas fa-cogs"></i> Admin Panel</h2>
        </div>
        
        <ul class="admin-nav-menu">
          <li>
            <%= link_to admin_root_path, class: "admin-nav-link #{'active' if current_page?(admin_root_path)}" do %>
              <i class="fas fa-tachometer-alt"></i> Dashboard
            <% end %>
          </li>
          <li>
            <%= link_to admin_properties_path, class: "admin-nav-link #{'active' if current_page?(admin_properties_path)}" do %>
              <i class="fas fa-home"></i> Properties
            <% end %>
          </li>
          <li>
            <%= link_to root_path, class: "admin-nav-link", target: "_blank" do %>
              <i class="fas fa-external-link-alt"></i> View Site
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "admin-nav-link logout" do %>
              <i class="fas fa-sign-out-alt"></i> Logout
            <% end %>
          </li>
        </ul>
      </nav>

      <!-- Admin Main Content -->
      <main class="admin-main">
        <!-- Admin Header -->
        <header class="admin-header">
          <div class="admin-header-content">
            <h1><%= @page_title || "Admin Dashboard" %></h1>
            <div class="admin-user-info">
              <span>Welcome, <%= current_user.email %></span>
            </div>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="admin-alert admin-alert-success">
            <%= notice %>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="admin-alert admin-alert-danger">
            <%= alert %>
          </div>
        <% end %>

        <!-- Page Content -->
        <div class="admin-content">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>